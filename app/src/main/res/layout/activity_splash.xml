<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/potrait_background">

    <!-- A LinearLayout to combine the "FLAPPY", bird logo, and "BIRD" -->
    <LinearLayout
        android:id="@+id/titleLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true">

        <!-- "FLAPPY" Text -->
        <TextView
            android:id="@+id/textFlappy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="FLAPPY"
            android:textColor="@color/colorYellow"
            android:textSize="40sp"
            android:fontFamily="@font/fonta"
            android:layout_marginEnd="8dp" />

        <!-- Bird Logo Image -->
        <ImageView
            android:id="@+id/birdLogo"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/bird1"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp" />

        <!-- "BIRD" Text -->
        <TextView
            android:id="@+id/textBird"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BIRD"
            android:textColor="@color/colorYellow"
            android:textSize="40sp"
            android:fontFamily="@font/fonta"
            android:layout_marginStart="8dp" />

    </LinearLayout>

</RelativeLayout>
